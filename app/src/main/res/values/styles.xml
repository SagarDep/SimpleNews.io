    </style>

    <style name="WhiteTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/tab_focus</item>
    </style>
</resources>
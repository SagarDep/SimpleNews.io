<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppWidget" parent="Theme.AppCompat.Light"/>

    <style name="AppWidget.DeepLine">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AboutColor_title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AboutColor_desc">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Item_backgorund">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- -->

    <style name="LapisBlueTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/lapis_blue</item>
        <item name="colorPrimaryDark">@color/lapis_blue</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="PaleDogwoodTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/pale_dogwood</item>
        <item name="colorPrimaryDark">@color/pale_dogwood</item>
        <item name="colorAccent">@color/tab_focus</item>
    </style>

    <style name="GreeneryTheme" parent="BaseTheme">

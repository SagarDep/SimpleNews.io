<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="weacher_title">
        <item name="android:textSize">21.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="weacher_temp">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="weacher_weather">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppWidget" parent="Theme.AppCompat.Light"/>

    <style name="AppWidget.DeepLine">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AboutColor_title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AboutColor_desc">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Item_backgorund">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- -->

    <style name="LapisBlueTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/lapis_blue</item>
        <item name="colorPrimaryDark">@color/lapis_blue</item>
        <item name="colorAccent">@color/lapis_blue</item>
    </style>

    <style name="PaleDogwoodTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/pale_dogwood</item>
        <item name="colorPrimaryDark">@color/pale_dogwood</item>
        <item name="colorAccent">@color/pale_dogwood</item>
    </style>

    <style name="GreeneryTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/greenery</item>
        <item name="colorPrimaryDark">@color/greenery</item>
        <item name="colorAccent">@color/greenery</item>
    </style>

    <style name="PrimroseYellowTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/primrose_yellow</item>
        <item name="colorPrimaryDark">@color/primrose_yellow</item>
        <item name="colorAccent">@color/primrose_yellow</item>
    </style>

    <style name="FlameTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/flame</item>
        <item name="colorPrimaryDark">@color/flame</item>
        <item name="colorAccent">@color/flame</item>
    </style>

    <style name="IslandParadiseTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/island_paradise</item>
        <item name="colorPrimaryDark">@color/island_paradise</item>
        <item name="colorAccent">@color/island_paradise</item>
    </style>

    <style name="KaleTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/kale</item>
        <item name="colorPrimaryDark">@color/kale</item>
        <item name="colorAccent">@color/kale</item>
    </style>

    <style name="PinkYarrowTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/pink_yarrow</item>
        <item name="colorPrimaryDark">@color/pink_yarrow</item>
        <item name="colorAccent">@color/pink_yarrow</item>
    </style>

    <style name="NiagaraTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/niagara</item>
        <item name="colorPrimaryDark">@color/niagara</item>
        <item name="colorAccent">@color/niagara</item>
    </style>

</resources>
